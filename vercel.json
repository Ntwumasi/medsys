{
  "buildCommand": "npm install --workspaces --legacy-peer-deps && cd server && npm run build && cd ../client && npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "npm install --legacy-peer-deps --workspaces",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
